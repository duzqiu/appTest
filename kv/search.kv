# 第二个标签页
<SearchPage@MDBottomNavigationItem>:
    name: 'screen2'
    text: 'Search'
    icon: 'magnify'  
    MDBoxLayout:
        id: top_bar
        size_hint: (0.95, None)
        height: "40dp"
        pos_hint: {"top": 1, "center_x": 0.5}
        y: root.height - self.height - dp(20)  # 距离顶部 20dp
        md_bg_color: [0.95, 0.95, 0.95, 1]
        radius: [12, ]
        TextInput:
            id: search_input
            hint_text: "请输入搜索内容..."
            font_name: "fonts/pingfang-hei.ttf"
            multiline: False
            size_hint_x: 0.8
            background_color: [0, 0, 0, 0]
            foreground_color: [0, 0, 0, 1]
            font_size: "16sp"
            padding: [10, (self.height - self.line_height) / 2, 10, 0] 
        MDIconButton:
            icon: "magnify"
            on_press: app.on_search()
            theme_text_color: "Custom"
            text_color: [0, 0, 0, 0.6]
            ripple_scale: 0
            size_hint_y: 1

    # 页面主体内容（可以滚动）
    ScrollView:
        pos_hint: {"top": 0.9}  # 留出顶部空间
        size_hint: 1, 0.9

        GridLayout:
            cols: 1
            spacing: "6dp"
            size_hint_y: None
            height: self.minimum_height

            # 示例内容模块
            MDBoxLayout:
                size_hint_y: None
                height: "200dp"
                md_bg_color: [1, 1, 1, 1]
                radius: [16, ]
                padding: [16, 12]

                Label:
                    text: "这是一个滚动区域的内容1"
                    font_name: "fonts/pingfang-hei.ttf"
                    color: [0, 0, 0, 1]
            # 示例内容模块
            MDBoxLayout:
                size_hint_y: None
                height: "60dp"
                md_bg_color: [1, 1, 1, 1]
                radius: [16, ]
                padding: [16, 12]

                Label:
                    text: "这是一个滚动区域的内容2"
                    font_name: "fonts/pingfang-hei.ttf"
                    color: [0, 0, 0, 1]
            # 示例内容模块
            MDBoxLayout:
                size_hint_y: None
                height: "120dp"
                md_bg_color: [1, 1, 1, 1]
                radius: [16, ]
                padding: [16, 12]

                Label:
                    text: "这是一个滚动区域的内容3"
                    font_name: "fonts/pingfang-hei.ttf"
                    color: [0, 0, 0, 1]
            # 示例内容模块
