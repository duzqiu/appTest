<DataCard>:
    orientation: 'horizontal'
    padding: [10, 10]
    spacing: "10dp"
    md_bg_color: [0.95, 0.95, 0.95, 1]  # 浅灰色背景
    size_hint_y: None
    height: "50dp"  # 固定高度以确保一致的外观
    radius: [16, ]

    FitImage:
        source: root.icon_source if root.icon_source else 'image/icon.png'  # 设置默认图标
        size_hint: None, None
        size: "32dp", "32dp"
        pos_hint: {"center_y": 0.5, "center_x":0.2}

    MDBoxLayout:
        orientation: 'vertical'   
        padding: [10]

        MDLabel:
            text: root.item_name
            font_name: "fonts/pingfang-hei.ttf"
            halign: 'center'

        MDLabel:
            text: f"{root.rating}/5.0"
            theme_text_color: 'Secondary'
            halign: 'center'

# 第二个标签页
<SearchPage@MDBottomNavigationItem>:
    name: 'screen2'
    text: 'Search'
    icon: 'magnify' 
    # 搜索框+搜索按钮 
    MDBoxLayout:
        id: top_bar
        size_hint: (0.95, None)
        height: "40dp"
        pos_hint: {"top": 1, "center_x": 0.5}
        y: root.height - self.height - dp(20)  # 距离顶部 20dp
        md_bg_color: [0.95, 0.95, 0.95, 1]
        radius: [12, ]
        TextInput:
            id: search_input
            hint_text: "请输入搜索内容..."
            font_name: "fonts/pingfang-hei.ttf"
            multiline: False
            size_hint_x: 0.8
            background_color: [0, 0, 0, 0]
            foreground_color: [0, 0, 0, 1]
            font_size: "16sp"
            padding: [10, (self.height - self.line_height) / 2, 10, 0] 
        MDIconButton:
            icon: "magnify"
            on_press: app.on_search()
            theme_text_color: "Custom"
            text_color: [0, 0, 0, 0.6]
            ripple_scale: 0
            size_hint_y: 1

    # 页面主体内容（可以滚动）
    ScrollView:
        pos_hint: {"top": 0.9}  # 留出顶部空间
        size_hint: 1, 0.9
        GridLayout:
            cols: 1
            spacing: "6dp"
            size_hint_y: None
            height: self.minimum_height
            # 示例内容模块1
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: "260dp"
                md_bg_color: [1, 1, 1, 1]
                radius: [16, ]
                padding: [16, 12]
                MDLabel:
                    text: "热门推荐"
                    font_name: "fonts/pingfang-hei.ttf"
                    halign: "left"
                    theme_text_color: "Primary"
                    size_hint_y: None
                    height: "24dp"
                    valign: "middle"
                    padding_x: "24dp"

                MDGridLayout:
                    cols: 2  # 双列
                    rows: 4  # 四行
                    padding: [10, 10]
                    spacing: [10, 10]

                    DataCard:
                        icon_source: 'image/icon.png'
                        item_name: "XM"
                        rating: 1.0

                    DataCard:
                        icon_source: 'image/icon.png'
                        item_name: "TMCM"
                        rating: 4.0

                    DataCard:
                        icon_source: 'image/icon.png'
                        item_name: "嘉盛"
                        rating: 3.0

                    DataCard:
                        icon_source: 'image/icon.png'
                        item_name: "富拓"
                        rating: 2.0

                    DataCard:
                        icon_source: 'image/icon.png'
                        item_name: "Exness"
                        rating: 1.0

                    DataCard:
                        icon_source: 'image/icon.png'
                        item_name: "爱华"
                        rating: 3.0

                    DataCard:
                        icon_source: 'image/icon.png'
                        item_name: "易汇"
                        rating: 2.0

                    DataCard:
                        icon_source: 'image/icon.png'
                        item_name: "HTFX"
                        rating: 5.0
            # 示例内容模块2
            MDBoxLayout:
                orientation: 'vertical'  
                size_hint_y: None
                height: "100dp"
                md_bg_color: [1, 1, 1, 1]
                radius: [16, ]

                MDLabel:
                    text: "热门推荐"
                    font_name: "fonts/pingfang-hei.ttf"
                    halign: "left"
                    theme_text_color: "Primary"
                    size_hint_y: None
                    height: "24dp"
                    valign: "middle"
                    padding_x: "24dp"
            # 示例内容模块3
            MDBoxLayout:
                size_hint_y: None
                height: "360dp"
                md_bg_color: [1, 1, 1, 1]
                radius: [16, ]
                padding: [16, 12]

                Label:
                    text: "这是一个滚动区域的内容3"
                    font_name: "fonts/pingfang-hei.ttf"
                    color: [0, 0, 0, 1]